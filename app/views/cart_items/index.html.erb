<p id="notice"><%= notice %></p>

<h1>Purchase Record</h1>
(Listing Cart Items)

<table>
  <thead>
    <tr>
      <th>CartItemID</th>
      <th>ProductID</th>
      <th>UserID</th>
      <th>Quantity</th>
      <th>Purchased at</th>
      <th>Status</th>
      <th>TransactionID</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.id %></td>
        <td><%= cart_item.product_id %></td>
        <td><%= cart_item.user_id %></td>
        <td><%= cart_item.quantity %></td>
        <td><%= cart_item.purchased_at %></td>
        <td><%= cart_item.status %></td>
        <td><%= cart_item.transaction_id %></td>
        <td><%= link_to 'Show', cart_item %></td>
        <td><%= link_to 'Edit', edit_cart_item_path(cart_item) %></td>
        <td><%= link_to 'Destroy', cart_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

