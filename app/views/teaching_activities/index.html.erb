<p id="notice"><%= notice %></p>

<h1>Listing Teaching Activities</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Activity1</th>
      <th>Activity2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teaching_activities.each do |teaching_activity| %>
      <tr>
        <td><%= teaching_activity.user_id %></td>
        <td><%= teaching_activity.activity1 %></td>
        <td><%= teaching_activity.activity2 %></td>
        <td><%= link_to 'Show', teaching_activity %></td>
        <td><%= link_to 'Edit', edit_teaching_activity_path(teaching_activity) %></td>
        <td><%= link_to 'Destroy', teaching_activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

