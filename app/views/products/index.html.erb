
<% if !@prior_purchases.empty? %>
<h2>Recent Purchases:</h2>
<table class="table-striped">
  <thead>
    <tr>
    	<th>cart_id</th>
    	<th>product_id</th>
    	<th>user_id</th>
    	<th>purchased_at</th>
    	<th>status</th>      
    </tr>
  </thead>

  <tbody>
    <% @prior_purchases.each do |x| %>
      <tr>
        <td><%= x.id %></td>
        <td><%= x.product_id %></td>
        <td><%= x.user_id%></td>
        <td><%= x.purchased_at%></td>
        <td><%= x.status%></td>
      </tr>
      <% if x.product_id == 2 %>
      
      	<tr> <td colspan= 5><%= link_to "Start Clinical Instructor Certification Course", course_home_path, {class: 'btn btn-info btn-lg'}%>
      	</td>
      	</tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<h1>Available Courses</h1>
<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'Products', products_path %></li>
  <li><%= link_to 'New Product', new_product_path %></li>  
</ul>


<% @products.each do |product| %>
    
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%=product.title%></h3>
  </div>
  <div class="panel-body">
   	<ul class="list-group">
  		<li class="list-group-item"><%=product.description%></li>
  		<li class="list-group-item">$<%= product.price %>.00</li>
  		<!--<li class="list-group-item"><%= link_to 'Show', product, class: 'btn btn-primary btn-xs' %></li>-->
  		<li class="list-group-item"><%= link_to 'Add to Cart', {controller:"cart_items", action:"new", product_id:product.id}, class: 'btn btn-info btn-lg' %></li>
	</ul>
  </div>
</div>
    
<% end %>


<br>

<table class="table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td>$<%= product.price %>.00</td>
        <td><%= link_to 'Show', product, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_product_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Product
<% end %>







